@model IEnumerable<Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product list</h2>
        </div>
         <div class="col-6 text-right">
            <a asp-action="CreateEdit" asp-controller="Product" class="btn-primary btn" >New product</a>
        </div>
    </div>
    @if(Model.Count() > 0)
    {
        <table>
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Category</td>
                    <td>Image</td>
                </tr>

            </thead>
        </table>
    }
    else
    {
        <p>No product found.</p>
    }


</div>